{% extends 'base.html.twig' %}

{% block body %}
    <h2>Périmètre gaz naturel :  {{ client.permetreGazs|length + 1 }}/5</h2>
    <hr>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-6">{{ form_row(form.dateFourniture) }}</div>
        <div class="col-6">{{ form_row(form.PCE) }}</div>
    </div>
    <div class="row">
        <div class="col-6">{{ form_row(form.nomPtLivraison) }}</div>
        <div class="col-6">{{ form_row(form.CAR) }}</div>
    </div>
    <hr>
    <h5>Les consommations:</h5>
    <div class="row">
        <div class="col-6">{{ form_row(form.profil) }}</div>
        <div class="col-6">{{ form_row(form.tarifDistribution) }}</div>
    </div>
    <div class="row">
        <div class="col-6"><input type="submit" class="btn btn-sm btn-primary" value="Périmètre Gaz Naturel"></div>
    </div>
    <a href="{{ path('sendemailclient',{id:client.id}) }}" style="float: right" class="btn btn-sm btn-warning"> Terminer</a>
    {{ form_end(form) }}

{% endblock %}