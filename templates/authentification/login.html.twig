{% extends 'connexion.html.twig' %}
{% block stylesheets %}
    <style>
        .form-login{
            width: 30%;
            padding: 10px 40px 0 ;
            border: 1px black solid;
            border-radius: 10px;
        }
        .error{
            border-radius: 10px;
            /*background-color: rgba(180,90,1,0.4);*/
        }
    </style>
{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <center>
        <div class="form-login">
            <img width="80%" src="/imagesSites/unnamed.png">
            <form  method="post" action="{{ path('login') }}">
                {% if error %}
                    <div class="error" style="text-align: center;  color: red; font-weight: bold; font-size: 19px">
                        Pseudo ou mot de passe incorrect
                    </div>
                    <br>
                {% endif %}
                <br>
                <div class="form-group">
                    <input required class="form-control" type="text" name="_username" value="{{ lastUsername }}" placeholder="Pseudo"><br>
                </div>
                <div class="form-group">
                    <input required class="form-control" type="password" name="_password" placeholder="Mot de Passe"><br>
                </div>
                <div class="form-group">
                    <input class="btn btn-sm btn-primary" type="submit" value="Se connecter">
                </div>
            </form>
        </div>
    </center>

{% endblock %}
