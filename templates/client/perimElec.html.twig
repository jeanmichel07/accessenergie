{% extends 'front.html.twig' %}
{% block body %}
    <div><br>Mes contrats électricité</div><br>
    <div>Nb de site : {{ c.perimetreElectricites|length }}</div><hr>
    <table class="table">
        <tr>
            <th>PDL</th>
            <th>D.D.F</th>
            <th>HPH</th>
            <th>HCH</th>
            <th>HPE</th>
            <th>STATUT</th>
            <th>VOLUME</th>
        </tr>
    {% for el in c.perimetreElectricites %}
        <tr>
            <td>{{ el.PDL }}</td>
            <td>{{ el.dateFourniture|date('d/m/Y') }}</td>
            <td>{{ el.HPH }}</td>
            <td>{{ el.HCH }}</td>
            <td>{{ el.HPE }}</td>
            <td>Statu</td>
            <td>Volume</td>
        </tr>
    {% endfor %}
    </table>
    <div style="float: right; border: solid black 1px; width: 10%; padding: 12px">
        Total : ...
    </div>
{% endblock %}